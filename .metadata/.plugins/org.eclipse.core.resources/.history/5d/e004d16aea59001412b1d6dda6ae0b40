package com.test;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.Reader;
import java.util.HashMap;

/**
 * @author preeti
 *
 */
 class CompanyShareData {

	
	/**
	 * @param csv fileName
	 */
	/*Read file and get max rate*/
	public static HashMap<String,CompanyShare> readAndFindMaxShare(String fileName)
	{
		HashMap<String,CompanyShare> companyData=new HashMap<String,CompanyShare>();
		BufferedReader br=null;
		try
		{
			Reader fileReader=new FileReader(fileName);
			br=new BufferedReader(fileReader);
			String line=null;
			String[] strArr=null;
			CompanyShare cs=null;
			if((line=br.readLine())!=null)
			{
				strArr=line.split(",");
				if(strArr.length>2)
					for(int ind=2;ind<strArr.length;ind++)
						companyData.put(strArr[ind], new CompanyShare(strArr[2], "0", "0", 0.0));
			}
			while((line=br.readLine())!=null)
			{
				strArr=line.split(",");
				if(strArr.length>2)
					for(int ind=2;ind<strArr.length;ind++)
					{
						cs=companyData.get(strArr[ind]);
						if(cs.getSharePrice()<Double.parseDouble(strArr[ind]))
						{
							cs.setMonth(strArr[1]);
							cs.setYear(strArr[0]);
							cs.setPrice(Double.parseDouble(strArr[ind]));
						}
					}
				
			}
			
		}
		catch(Exception e)
		{
			
		}
		
		return companyData;
	}
	
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
