package com.test;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.Reader;
import java.util.HashMap;
import java.util.LinkedList;
import java.util.List;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

/**
 * @author preeti
 *
 */
 class CompanyShareData {

	
	/**
	 * @param csv fileName
	 */
	/*Read file and get max rate*/
	public static List<CompanyShare> readAndFindMaxShare(String fileName,int startDataIndex)
	{
		List<CompanyShare> companyData=new LinkedList<CompanyShare>();
		BufferedReader br=null;
		try
		{
			Reader fileReader=new FileReader(fileName);
			br=new BufferedReader(fileReader);
			String line=null;
			String[] strArr=null;
			CompanyShare cs=null;
			if((line=br.readLine())!=null)
			{
				strArr=line.split(",");
				if(strArr.length>=startDataIndex)
					for(int ind=startDataIndex;ind<strArr.length;ind++)
						companyData.add(new CompanyShare(strArr[ind], "0", "0", 0.0));
			}
			while((line=br.readLine())!=null)
			{
				strArr=line.split(",");
				if(strArr.length>=startDataIndex)
					for(int ind=startDataIndex;ind<strArr.length;ind++)
					{
						if(!Util.isNumeric(strArr[ind]))
						{
							System.out.println("Please provide numeric price for company"+(ind-startDataIndex));
							System.exit(1);
						}
						cs=companyData.get(ind-startDataIndex);
						
						if(cs.getSharePrice()<Double.parseDouble(strArr[ind]))
						{
							cs.setMonth(strArr[1]);
							cs.setYear(strArr[0]);
							cs.setPrice(Double.parseDouble(strArr[ind]));
						}
					}
				
			}
			
		}
		catch(Exception e)
		{
			
		}
		finally
		{
			try
			{
			br.close();
			}catch(Exception e)
			{e.printStackTrace();}
		}
		return companyData;
	}
	
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
 class Util
 {
	 public static boolean isNumeric(String data)
	 {
		 Pattern pattern=null;
		 if(data.contains("."))
			 pattern=Pattern.compile("^[0-9]*\\.[0-9]++$");
		 else
			 pattern=Pattern.compile("^[0-9]++$");
		 Matcher matcher=pattern.matcher(data);
		 return matcher.matches();
	 }
 }
